<h2>Sign in</h2>

<form action="<%= session_url %>" method="post">
  <input
     name="_method"
     type="hidden"
     value="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <label for="user_email">Username</label>
  <input
     id="user_email"
     name="user[email]"
     type="text">
  <br>

  <label for="user_password">Password</label>
  <input
     id="user_password"
     name="user[password]"
     type="password">
  <br>

  <input type="submit" value="Sign in!">
</form>